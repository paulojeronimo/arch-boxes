{
  "variables": {
    "iso_url": "file:///Users/pj/Downloads/softwares/linux/archlinux/2020.03.01/archlinux-2020.03.01-x86_64.iso",
    "iso_checksum_url": "file:///Users/pj/Downloads/softwares/linux/archlinux/2020.03.01/sha1sums.txt",
    "iso_checksum_type": "sha1",
    "disk_size": "81920",
    "memory": "1024",
    "cpus": "2",
    "headless": "true",
    "write_zeroes": "",
    "boot_wait": "60s"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_wait": "{{user `boot_wait`}}",
      "http_directory": "paulojeronimo/http",
      "disk_size": "{{user `disk_size`}}",
      "guest_os_type": "ArchLinux_64",
      "iso_checksum_url": "{{user `iso_checksum_url`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_url": "{{user `iso_url`}}",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "sudo systemctl poweroff",
      "guest_additions_mode": "disable",
      "headless": "{{user `headless`}}",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "{{user `memory`}}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "{{user `cpus`}}"
        ]
      ],
      "boot_command": [
        "<enter><wait10><wait10><wait10><wait10><wait10><enter><enter>",
        "curl -O 'http://{{.HTTPIP}}:{{.HTTPPort}}/install{,-chroot}.sh'<enter><wait>",
        "bash install.sh < install-chroot.sh && systemctl reboot<enter>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "provision/postinstall.sh",
        "paulojeronimo/provision/BOX_TYPE.sh",
        "provision/cleanup.sh",
        "paulojeronimo/provision/generate-mirrorlist.sh"
      ],
      "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'",
      "only": [
        "virtualbox-iso"
      ]
    },
    {
      "type": "shell",
      "scripts": [
        "provision/write_zeroes.sh"
      ],
      "execute_command": "if [ ! -z \"{{user `write_zeroes`}}\" ]; then echo 'vagrant'|sudo -S sh '{{.Path}}'; fi"
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "keep_input_artifact": false,
        "output": "paulojeronimo-archlinux-BOX_TYPE-{{isotime \"2006-01-02\"}}.box"
      }
    ]
  ]
}
